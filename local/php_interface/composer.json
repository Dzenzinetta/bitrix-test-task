{
    "name": "kustov/testtask",
    "description": "simple test task for job interview",
    "require": {
        "wikimedia/composer-merge-plugin": "^2.0"
    },
    "files": [
        "src/simple_html_dom.php"
    ],
    "config": {
        "allow-plugins": {
            "wikimedia/composer-merge-plugin": true
        }
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "../../bitrix/composer-bx.json"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Testtask\\": "src/"
        }
    },
    "require-dev": {
        "laravel/pint": "^1.24"
    }
}
